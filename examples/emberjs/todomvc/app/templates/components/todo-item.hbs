<div class="view">
  <input type="checkbox" class="toggle" checked={{tobuy.completed}} onchange={{action 'toggleCompleted'}}>
  <label ondblclick={{action 'startEditing'}}>{{tobuy.title}}</label>
  <button onclick={{action 'removeTodo'}} class="destroy"></button>
</div>
<input type="text" class="edit" value={{tobuy.title}} onblur={{action 'doneEditing' value='target.value'}} onkeydown={{action 'handleKeydown'}} autofocus>