{{#if tobuys.length}}
  {{#if canToggle}}
    <input type="checkbox" id="toggle-all" checked={{allCompleted}} onchange={{action 'toggleAll'}}>
  {{/if}}
  <ul id="tobuy-list" class="tobuy-list">
    {{#each tobuys as |tobuy|}}
      {{tobuy-item tobuy=tobuy onStartEdit=(action 'disableToggle') onEndEdit=(action 'enableToggle')}}
    {{/each}}
  </ul>
{{/if}}
