<view name="TodoApp">

<section class="tobuyapp">
	<header class="header">
		<h1>tobuys</h1>
		<input class="new-tobuy" placeholder="What needs to be done?" autofocus
			onblur="<%= tobuys.actions.add_blur %>" onkeydown="<%= tobuys.actions.addOnKeydown %>">
	</header>
	<call view="Tasks" data="data" />
	<call view="Stats" data="data.stats" />
</section>
