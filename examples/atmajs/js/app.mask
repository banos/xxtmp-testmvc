import * as AppController from 'app.js';
import TobuyInput from 'Controls/TobuyInput';
import TobuyList from 'Tobuys/TobuyList';
import Filter from 'Controls/Filter';

define App extends AppController {
	section .tobuyapp {
		header {
			h1 > 'tobuys'
	
			TobuyInput .new-tobuy
				autofocus
				placeholder = 'What needs to be done?'
				;
		}
	
		+if (status.count) {
			section .main >
				TobuyList;
	
			footer .footer {
	
				span .tobuy-count {
					strong > '~[bind: status.tobuyCount]'
					span > ' item~[bind: status.tobuyCount != 1 ? "s"] left'
				}
	
				Filter;
	
				+if (status.completedCount > 0) {
					button .clear-completed x-tap = 'removeAllCompleted' >
						'Clear completed'
				}
			}
		}
	}
	footer .info {
		p { 'Double-click to edit a tobuy' }
		p { 'Created by ' a href='http://github.com/tenbits' > 'Alex Kit' }
		p { 'Part of ' a href='http://tobuymvc.com' > 'TobuyMVC' }
	}
}
